<%- layout('layout') -%>
  <div class="jumbotron" id="nav-gap">
    <div class="container">
      <h1>Shop smart, save big</h1>
      <p>Find your favorite product</p>
    </div>
  </div>

  <div class="container">
    <div class="row">
      <% for (let i=0; i < products.length; i++) { %>
        <div class="col-md-4">
          <div class="thumbnail">
            <img src="<%= products[i].image %>" alt="thumbnail" />
            <div class="caption">
              <a href="/product/<%= products[i]._id %>">
                <h3>
                  <%= products[i].name %>
                </h3>
              </a>
              <p>Price:
                <%= products[i].price %>$</p>
              <p>Category:
                <%= products[i].category.name %>
              </p>
            </div>
          </div>
        </div>
        <% } %>
    </div>
  </div>

  <div class="container">
    <nav aria-label="...">
      <ul class="pagination text-center">      
          <% for(let i = 1; i <= pages; i++) { %>
            <% if (i === Number(page)) { %>
              <li class="active" ><a href="/page/<%= i %>"><%= i %></a></li>
            <% } else { %>
              <li ><a href="/page/<%= i %>"><%= i %></a></li>
            <% } %>
          <% } %>      
      </ul>
    </nav>
  </div>